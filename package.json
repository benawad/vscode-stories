{
  "name": "stories",
  "displayName": "Stories",
  "icon": "media/ben-circle.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/benawad/vscode-stories"
  },
  "description": "Stories for VSCode",
  "publisher": "benawad",
  "version": "1.1.0",
  "engines": {
    "vscode": "^1.50.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": [
      {
        "title": "Stories",
        "properties": {
          "stories.ffmpeg-binary": {
            "description": "FFmpeg Binary Location",
            "type": "string"
          },
          "stories.username": {
            "description": "Username that shows up when you post a story",
            "type": "string"
          },
          "stories.avatarUrl": {
            "description": "Url to an image to show as your avatar (only accepts your GitHub profile image)",
            "type": "string"
          },
          "stories.flair": {
            "type": "string",
            "default": "vanilla js",
            "enum": [
              "vanilla js",
              "flutter",
              "react",
              "vue",
              "angular",
              "python",
              "dart",
              "java",
              "golang",
              "c++"
            ],
            "enumDescriptions": [
              "for the minimalists",
              "for the great people out there",
              "for the true kings",
              "if you like matcha",
              "for the carrot farmers",
              "for the ai enthusiasts out there",
              "for the null safety lovers",
              "for the coffee people",
              "if you like gopher",
              "for those who like fast things"
            ]
          }
        }
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "stories.refresh",
          "when": "view == storiesPanel || view == stories-full",
          "group": "navigation"
        }
      ]
    },
    "commands": [
      {
        "command": "stories.refresh",
        "title": "Refresh",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        }
      },
      {
        "title": "Start Recording",
        "category": "Stories",
        "command": "stories.record"
      },
      {
        "title": "Stop Recording",
        "category": "Stories",
        "command": "stories.stop"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "stories-icon",
          "title": "Stories",
          "icon": "media/circle-s-outline.svg"
        }
      ]
    },
    "views": {
      "stories-icon": [
        {
          "type": "webview",
          "id": "stories-full",
          "name": "Stories",
          "icon": "media/circle-s-outline.svg",
          "contextualTitle": "Stories"
        }
      ],
      "explorer": [
        {
          "type": "webview",
          "id": "storiesPanel",
          "name": "Stories"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.0",
    "@types/node": "^12.11.7",
    "@types/node-fetch": "^2.5.7",
    "@types/vscode": "^1.50.0",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "eslint": "^7.9.0",
    "glob": "^7.1.6",
    "mocha": "^8.1.3",
    "typescript": "^4.0.2",
    "vscode-test": "^1.4.0"
  },
  "dependencies": {
    "@arcsine/screen-recorder": "^0.1.6",
    "form-data": "^3.0.0",
    "node-fetch": "^2.6.1",
    "unique-names-generator": "^4.3.1"
  }
}
